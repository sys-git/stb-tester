#!/bin/sh

#/ usage: stbt [--help] [--version]
#/             <command> [args]
#/
#/ Available commands are:
#/     run     Run a stbt script
#/     record  Record a stbt script
#/
#/ For help on a specific command do 'stbt <command> --help'.
#/ See 'man stbt' for more detailed information.

usage() { grep '^#/' "$0" | cut -c4-; }

[ $# -ge 1 ] || { usage >&2; exit 1; }
case "$1" in
    -h|--help)
        usage; exit 0;;
    -v|--version)
        echo "stb-tester 0.7"; exit 0;;
    run|record)
        STBT_SYSTEM_CONFIG=/home/francis/etc/stbt/stbt.conf /home/francis/libexec/stbt/stbt-"$@";;
    *)
        usage >&2; exit 1;;
esac
